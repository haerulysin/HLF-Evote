{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "experimentalDecorators": true,
        // "target": "esnext",
        "emitDecoratorMetadata": true,
        "outDir": "dist",
        "declaration": true,
        "sourceMap": true,
        // "noUnusedLocals": true,
        // "noImplicitReturns": true,
        "resolveJsonModule": true
    },
    "include": [
        "./src/**/*",
        "./src/**/*.d.ts"
    ],
    "exclude": [
        "./src/**/*.spec.ts"
    ],

}
