    "compilerOptions": {
        "outDir": "dist",
        "target": "ES2017",
        "moduleResolution": "node",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        // "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./src/**/*.spec.ts"
    ]
}